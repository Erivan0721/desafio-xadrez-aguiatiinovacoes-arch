#include <stdio.h>

// Desafio de Xadrez - Nível Novato
// Aluno: [Seu Nome]

int main() {
    // 1. MOVIMENTAÇÃO DA TORRE
    // Objetivo: 5 casas para a direita usando 'FOR'
    printf("Movendo a Torre:\n");
    for (int i = 1; i <= 5; i++) {
        printf("Direita\n");
    }
    printf("\n"); // Linha em branco para organizar a saída

    // 2. MOVIMENTAÇÃO DO BISPO
    // Objetivo: 5 casas na diagonal (Cima e Direita) usando 'WHILE'
    printf("Movendo o Bispo:\n");
    int contadorBispo = 1;
    while (contadorBispo <= 5) {
        printf("Cima, Direita\n");
        contadorBispo++;
    }
    printf("\n");

    // 3. MOVIMENTAÇÃO DA RAINHA
    // Objetivo: 8 casas para a esquerda usando 'DO-WHILE'
    printf("Movendo a Rainha:\n");
    int contadorRainha = 1;
    do {
        printf("Esquerda\n");
        contadorRainha++;
    } while (contadorRainha <= 8);

    return 0;
}
